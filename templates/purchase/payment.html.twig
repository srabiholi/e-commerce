{% extends "base.html.twig" %}

{% block title %}Payez votre commande avec stripe{% endblock %}
{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="{{asset('css/style.css') }}" />
{% endblock %}

{% block body %}
<h1 class="jambon">Payez votre commande avec stripe</h1>

<div class="body-content">

    <form id="payment-form">
        <div id="card-element">
            <!--Stripe.js injects the Card Element-->
        </div>
        <button id="submit">
            <div class="spinner hidden" id="spinner"></div>
            <span id="button-text">Payez avec Stripe</span>
        </button>
        <p id="card-error" role="alert"></p>
    </form>

</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://js.stripe.com/v3/"></script>
<script>
    const clientSecret = '{{ clientSecret }}';
    const stripePublicKey = '{{ stripePublicKey }}';
    const redirectAfterSuccessUrl = "{{ url('purchase_payment_success', { 'id': purchase.id }) }}";
</script>
<script src="{{asset('js/payment.js') }}"></script>

{% endblock %}

